{
  "manifest_version": 3,
  "name": "Send to Clawdbot",
  "version": "1.0.0",
  "description": "Send readable page content to a Clawdbot webhook.",
  "permissions": ["activeTab", "storage", "contextMenus", "scripting"],
  "action": {
    "default_title": "Send to Clawdbot",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
